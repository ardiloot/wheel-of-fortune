{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
      "config:base",
      ":prConcurrentLimit20",
      ":prHourlyLimitNone",
      ":enableVulnerabilityAlerts"
    ],
    "schedule": [
        "before 9am on Sunday"
    ],
    "timezone": "Europe/Tallinn",
    "enabledManagers": [
        "docker-compose",
        "dockerfile",
        "github-actions"
    ],
    "ignorePaths": [
        "**/embedded_software/WLED/**"
    ]
  }