{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
      "config:base",
      ":prConcurrentLimit20",
      ":prHourlyLimitNone",
      ":enableVulnerabilityAlerts"
    ],
    "schedule": [
        "before 9am on the first day of the month"
    ],
    "timezone": "Europe/Tallinn",
    "enabledManagers": [
        "docker-compose",
        "dockerfile",
        "github-actions"
    ],
    "ignorePaths": [
        "**/embedded_software/WLED/**"
    ],
    "packageRules": [
        {
          "matchPaths": ["Dockerfile"],
          "matchUpdateTypes": ["major", "minor"],
          "enabled": false
        }
    ]
  }